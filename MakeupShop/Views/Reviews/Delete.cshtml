@model MakeupShop.Models.Review

@{
    ViewData["Title"] = "Delete";
}

<div class="row text" style="color:#000">
    <div class="col-md-8 offset-2">
        <p>
            <h3>Are you sure you want to delete this Review?</h3>
        </p>
        <dl class="row col-md-8 offset-2">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger float-end" />
                <a class="btn btn-outline-secondary" asp-controller="Makeup" asp-action="Details" asp-route-id="@Model.MakeupId">Back to List</a>
            </form>
        </dl>
    </div>
</div>